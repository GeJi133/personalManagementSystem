<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.csu.personalManagementSystem.persistence.ApplyMapper">
    <insert id="insertLeaving" parameterType="Leaving">
        insert into leaving
        values (#{leavingId}, #{id},#{department},#{leavingTime},#{leavingReason})
    </insert>

    <insert id="insertTransfer" parameterType="Transfer">
        insert into transfer
        values (#{transferId}, #{id},#{transferReason},#{transferTime},#{departmentBefore},#{departmentAfter})
    </insert>

    <select id="seeLeavings" resultType="Leaving">
        select * from leaving
    </select>

    <select id="seeTransfers" resultType="Transfer">
        select * from transfer
    </select>
</mapper>