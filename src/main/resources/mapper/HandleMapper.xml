<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.csu.personalManagementSystem.persistence.HandleMapper">
    <update id="handleTransfer" parameterType="Transfer">
        update employee
        set department=#{departmentAfter}
        where id=#{id}
    </update>

    <delete id="handleLeaving" parameterType="Leaving">
        delete from employee
        where id=#{id}
    </delete>

    <update id="handleJobTransfer" parameterType="String">
        update employee
        set jobs=#{wantedJob}
        where id=#{id}
    </update>
</mapper>